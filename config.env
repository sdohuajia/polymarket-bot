# Polymarket BTC 15分钟自动交易配置

# ============== 钱包配置 ==============
PRIVATE_KEY=
FUNDER_ADDRESS=
POLYGON_RPC_URL=https://polygon.drpc.org

# 签名类型: 1=POLY_GNOSIS_SAFE, 2=EOA (推荐使用2)
SIGNATURE_TYPE=2

# ============== 代理配置 ==============
# 格式: http://user:pass@host:port 或 http://host:port
HTTP_PROXY=
HTTPS_PROXY=

# ============== 交易配置 ==============
# 是否自动下单 (true=自动下单, false=仅监控提醒)
AUTO_TRADE=true

# 每次下单金额 (USDC)
TRADE_AMOUNT=xx

# ============== 触发条件 (四个条件,满足任一即下单) ==============
# 条件1: 剩余XX秒内,价差≥XX,UP概率XX
CONDITION_1_TIME=
CONDITION_1_DIFF=
CONDITION_1_MIN_PROB=
CONDITION_1_MAX_PROB=

# 条件2: 剩余XX秒内,价差≤XX,DOWN概率XX
CONDITION_2_TIME=
CONDITION_2_DIFF=
CONDITION_2_MIN_PROB=
CONDITION_2_MAX_PROB=

# 条件3: 剩余XX秒内,价差≥XX,UP概率XX
CONDITION_3_TIME=
CONDITION_3_DIFF=
CONDITION_3_MIN_PROB=
CONDITION_3_MAX_PROB=

# 条件4: 剩余XX秒内,价差≤XX,DOWN概率XX
CONDITION_4_TIME=
CONDITION_4_DIFF=
CONDITION_4_MIN_PROB=
CONDITION_4_MAX_PROB=

# 止盈止损按买入概率比例计算
# 止损比例: 相对买入概率下跌15%触发 (例如90%买入 => 76.5%止损)
STOP_LOSS_PROB_PCT=0.15

# 盈亏比: 目标收益/止损风险，1.0表示约1:1
TAKE_PROFIT_RR=

# 止盈价格上限（防止超过市场上限）
TAKE_PROFIT_CAP=

# 延迟保护：盘口或BTC数据超过该秒数未更新，就跳过追单
MARKET_DATA_MAX_LAG_SEC=

# 主循环频率（秒），越小越快，CPU占用会更高
LOOP_INTERVAL_SEC=

# 买入追价步长：若上一笔未成交，每次重试最多只加X%
BUY_RETRY_STEP=

# ============== 风控配置 ==============

# 检查间隔 (秒)
CHECK_INTERVAL=

# 自动领取奖励（填写api）
POLY_BUILDER_API_KEY=
POLY_BUILDER_SECRET=
POLY_BUILDER_PASSPHRASE=

